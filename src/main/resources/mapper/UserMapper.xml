<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.demo.mapper.UserMapper">

    <resultMap id="UserInfoMap" type="com.example.demo.entity.UserBean" autoMapping="true">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_pwd" property="userPwd"/>
        <result column="user_realname" property="userRealname"/>
        <result column="user_nickname" property="userNickname"/>
        <result column="user_image" property="userImage"/>
        <result column="user_phone" property="Phone"/>
        <result column="user_email" property="userEmail"/>
        <result column="user_sex" property="sex"/>
        <result column="user_birth" property="userBirth"/>
        <result column="user_type" property="userType"/>
        <result column="user_address_id" property="userAddressId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <update id="userInfoModify" >
        update user
        <set >
            <if test="userAccountName != null">
                user_name = #{userAccountName},
            </if>
            <if test="password != null">
                user_pwd = #{password},
            </if>
            <if test="userRealName != null">
                user_realname = #{userRealName},
            </if>
            <if test="userNickName != null">
                user_nickname = #{userNickName},
            </if>
            <if test="userPhone != null">
                user_phone = #{userPhone},
            </if>
            <if test="userSex != null">
                user_sex = #{userSex},
            </if>
            <if test="userBirth != null">
                user_birth = #{userBirth},
            </if>
            <if test="userEmail != null">
                entryDate = #{userEmail},
            </if>
            <if test="userType != null">
                user_type = #{userType},
            </if>
            <if test="userAddressID != null">
                user_address_id = #{userAddressID},
            </if>
            update_time = now()
        </set>
        where user_id = #{userId}
    </update>


    <select id="getUserInfo" resultMap="UserInfoMap" resultType="com.example.demo.entity.UserBean">
        select *
        from users
        where users.users_id =  #{userID}
    </select>
    
    <select id="login" resultMap="UserInfoMap" resultType="com.example.demo.entity.UserBean">
        select *
        from users
        where users.users_id = #{userID} and users.users_password = #{password}
    </select>
    
    <insert id="insertInfo">
        insert into users (users_name,users_password,users_phone,users_type,create_time)
        values(#{userName},#{password},#{userPhone},1,now())
    </insert>



</mapper>